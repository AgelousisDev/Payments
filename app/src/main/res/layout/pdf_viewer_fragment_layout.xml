<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="presenter"
            type="com.agelousis.payments.main.ui.pdfViewer.presenters.PdfViewerPresenter" />
        <variable
            name="pageNumber"
            type="String" />
        <variable
            name="previousButtonState"
            type="Boolean" />
        <variable
            name="nextButtonState"
            type="Boolean" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pdfView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/activity_general_horizontal_margin"
        android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
        android:onClick="@{() -> presenter.onPrint()}"
        android:text="@string/key_print_label"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_printer"
        app:iconSize="24dp"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/previousPageButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/activity_general_horizontal_margin"
        android:layout_marginBottom="72dp"
        android:visibility="@{previousButtonState ? View.VISIBLE : View.GONE}"
        android:enabled="@{previousButtonState}"
        android:fontFamily="@font/ubuntu"
        android:onClick="@{() -> presenter.onPreviousPage()}"
        android:text="@string/key_previous_label"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextPageButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/activity_general_horizontal_margin"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/ubuntu"
        android:onClick="@{() -> presenter.onNextPage()}"
        android:text="@string/key_next_label"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="@{nextButtonState ? View.VISIBLE : View.GONE}"
        android:enabled="@{nextButtonState}"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>