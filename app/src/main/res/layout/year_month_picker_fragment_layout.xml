<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="yearMonthPickerDataModel"
            type="com.agelousis.payments.views.dateLayout.models.YearMonthPickerDataModel" />
        <variable
            name="presenter"
            type="com.agelousis.payments.views.dateLayout.interfaces.YearMonthPickerFragmentPresenter" />
    </data>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <View
            android:id="@+id/navigationLine"
            android:layout_width="20dp"
            android:layout_height="2.5dp"
            android:layout_marginTop="@dimen/activity_general_horizontal_margin"
            android:background="@drawable/bottom_sheet_navigation_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_general_horizontal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigationLine">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/ic_payment_month" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_general_horizontal_margin"
                yearMonthFormattedDate="@{yearMonthPickerDataModel}"
                tools:text="Jun, 2021" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/yearMonthPickerRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_general_horizontal_margin"
            android:onClick="@{() -> presenter.onApply()}"
            android:text="@string/key_apply_label"
            android:insetTop="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearMonthPickerRecyclerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
</layout>