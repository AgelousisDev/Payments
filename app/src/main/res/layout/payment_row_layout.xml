<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="com.agelousis.monthlyfees.utils.extensions.ExtensionsKt" />
        <variable
            name="personModel"
            type="com.agelousis.monthlyfees.main.ui.payments.models.PersonModel" />
        <variable
            name="presenter"
            type="com.agelousis.monthlyfees.main.ui.payments.presenters.PaymentPresenter" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="@{() -> presenter.onPaymentSelected(personModel)}"
        tools:targetApi="M">

        <FrameLayout
            android:id="@+id/paymentRowHeaderFrameLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:elevation="8dp"
            android:background="@drawable/oval_background"
            backgroundDrawableTintColor="@{personModel.headerFrameBackgroundColor}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="normal"
                android:textColor="@{ExtensionsKt.getGetContrastColor(personModel.headerFrameBackgroundColor)}"
                android:text="@{String.valueOf(personModel.groupName.charAt(0)).toUpperCase()}"/>

        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/entryCustomerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:fontFamily="@font/ubuntu"
            android:gravity="start"
            android:textSize="14sp"
            android:text="@{personModel.firstName}"
            app:layout_constraintStart_toEndOf="@+id/paymentRowHeaderFrameLayout"
            app:layout_constraintTop_toTopOf="@+id/paymentRowHeaderFrameLayout"
            tools:text="Vagelis Agelousis" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/entryTotalAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:fontFamily="@font/ubuntu"
            android:gravity="end"
            android:text="@{personModel.totalPaymentAmount != null ? personModel.totalPaymentAmount : @string/key_empty_field_label}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="40$" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/entryDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:fontFamily="@font/ubuntu_monospace"
            android:gravity="center"
            android:text="@{personModel.phone}"
            android:textSize="12sp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@+id/paymentRowHeaderFrameLayout"
            app:layout_constraintTop_toBottomOf="@+id/entryCustomerNameTextView"
            tools:text="10-11-2019" />

        <View
            android:id="@+id/savedRowSeparator"
            android:layout_width="0dp"
            android:layout_height="0.25dp"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:visibility="@{personModel.showLine ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/entryDateTextView"
            app:layout_constraintTop_toBottomOf="@+id/entryDateTextView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>