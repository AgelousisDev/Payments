<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="paymentAmountModel"
            type="com.agelousis.monthlyfees.main.ui.payments.models.PaymentAmountModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <com.agelousis.monthlyfees.views.currencyEditText.CurrencyFieldLayout
                android:id="@+id/amountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                currencyAmount="@{paymentAmountModel.paymentAmount}"
                app:fieldType="NUMBER"
                app:imeOptionType="actionDone"
                app:label="@string/key_amount_label"
                app:showLine="true"/>

            <com.agelousis.monthlyfees.views.dateLayout.DateFieldLayout
                android:id="@+id/dateDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                dateValue="@{paymentAmountModel.paymentDate}"
                app:label="@string/key_date_label"
                app:showLine="true"/>

            <com.agelousis.monthlyfees.views.detailsSwitch.DetailsAppSwitch
                android:id="@+id/skipPaymentAppSwitchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                appSwitchIsChecked="@{paymentAmountModel.skipPayment}"
                app:appSwitchLabel="@string/key_skip_payment_label"
                app:appSwitchShowLine="true" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/notesTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="@string/key_note_label"
                app:hintEnabled="true"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/notesField"
                    style="@style/TextViewTitleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textLongMessage"
                    android:text="@{paymentAmountModel.paymentNote}"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>