<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="personModel"
            type="com.agelousis.monthlyfees.main.ui.payments.models.PersonModel" />
        <variable
            name="groupModel"
            type="com.agelousis.monthlyfees.main.ui.payments.models.GroupModel" />
        <variable
            name="presenter"
            type="com.agelousis.monthlyfees.main.ui.newPayment.presenters.NewPaymentPresenter" />
    </data>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.agelousis.monthlyfees.views.personDetailsLayout.PersonDetailsLayout
            android:id="@+id/firstNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/key_first_name_label"
            personDetails="@{personModel.firstName}"
            app:showLine="true"
            app:imeOptionType="actionNext"
            app:fieldType="TEXT" />

        <com.agelousis.monthlyfees.views.personDetailsLayout.PersonDetailsLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/key_phone_label"
            personDetails="@{personModel.phone}"
            app:showLine="true"
            app:imeOptionType="actionNext"
            app:fieldType="NUMBER" />

        <com.agelousis.monthlyfees.views.personDetailsLayout.PersonDetailsLayout
            android:id="@+id/parentNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/key_parent_name_label"
            personDetails="@{personModel.parentName}"
            app:showLine="true"
            app:imeOptionType="actionNext"
            app:fieldType="TEXT" />

        <com.agelousis.monthlyfees.views.personDetailsLayout.PersonDetailsLayout
            android:id="@+id/parentPhoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/key_parent_phone_label"
            personDetails="@{personModel.parentPhone}"
            app:showLine="true"
            app:imeOptionType="actionNext"
            app:fieldType="NUMBER" />

        <com.agelousis.monthlyfees.views.personDetailsLayout.PersonDetailsLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/key_email_label"
            personDetails="@{personModel.email}"
            app:showLine="true"
            app:imeOptionType="actionNext"
            app:fieldType="EMAIL" />

        <com.agelousis.monthlyfees.views.personDetailsLayout.PersonDetailsLayout
            android:id="@+id/groupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/key_group_label"
            personDetails="@{groupModel.groupName != null ? groupModel.groupName : personModel.groupName != null ? personModel.groupName : @string/key_empty_field_label}"
            app:showLine="true"
            app:imeOptionType="actionNext"
            app:fieldType="TEXT" />

        <com.agelousis.monthlyfees.views.detailsSwitch.DetailsAppSwitch
            android:id="@+id/activeAppSwitchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:appSwitchLabel="@string/key_is_active_label"
            app:appSwitchShowLine="true"
            appSwitchIsChecked="@{personModel.active == true}"/>

        <com.agelousis.monthlyfees.views.detailsSwitch.DetailsAppSwitch
            android:id="@+id/freeAppSwitchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:appSwitchLabel="@string/key_is_active_label"
            app:appSwitchShowLine="true"
            appSwitchIsChecked="@{personModel.free == true}"/>

        <com.google.android.material.button.MaterialButton
            style="@style/BasicMaterialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="@string/key_add_payment_label"
            tools:text="@string/key_sign_up_label"
            android:onClick="@{() -> presenter.onPaymentViewOrAdd(null)}"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paymentAmountRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:orientation="horizontal"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</ScrollView>
</layout>